@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix dpv: <http://www.w3.org/ns/dpv#> .
@prefix acl: <http://www.w3.org/ns/auth/acl#> .
@prefix cert: <http://www.w3.org/ns/auth/cert#> .
@prefix oac: <https://protect.oeg.fi.upm.es/odrl-access-control-profile/oac> .

@prefix : <http://example.com> .

:policy-2 a odrl:Policy ;
    rdfs:comment '''Anne, as identified by her WebID https://anne.databox.me/profile/card#me, 
    prohibits the sharing of a resource stored on her Pod, located at 
    https://anne.databox.me/docs/file1, with any third parties.''' ;
    odrl:prohibition [
        a odrl:Prohibition ;
        odrl:assigner :anne ;
        odrl:target <https://beatriz.databox.me/docs/file1> ;
        odrl:action dpv:Share ;
        odrl:constraint [
                odrl:leftOperand dpv:Recipient ;
                odrl:operator odrl:isA ;
                odrl:rightOperand dpv:ThirdParty
        ]
    ] .

:anne a dpv:DataSubject ;
    cert:key <https://anne.databox.me/profile/card#me> .
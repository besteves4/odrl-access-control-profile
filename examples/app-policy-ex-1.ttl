@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix dpv: <http://www.w3.org/ns/dpv#> .
@prefix dpv-gdpr: <http://www.w3.org/ns/dpv-gdpr#> .
@prefix odrl-ac: <https://example.com/odrl-ac> .

:app-1
    rdfs:comment """App 1, as identified by their URL https://example-app-1.com, 
    requests permission to use and store the email address and social network 
    information of users for the purpose of registering and authenticating to their service.""" ;
    a odrl:Policy ;
    odrl:permission [
        a odrl:Permission ;
        odrl:assignee <https://example-app-1.com> ;
        odrl:target dpv:EmailAddress, dpv:SocialNetwork ;
        odrl:action dpv:Use, dpv:Store ;
        odrl:constraint [
            odrl:leftOperand dpv:Purpose ;
            odrl:operator odrl:isA ;
            odrl:rightOperand dpv:RegistrationAuthentication
        ]

    ] .

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix dpv: <http://www.w3.org/ns/dpv#> .
@prefix dpv-gdpr: <http://www.w3.org/ns/dpv-gdpr#> .
@prefix odrl-ac: <https://example.com/odrl-ac> .

#should we define it as odrl:Request https://www.w3.org/TR/odrl-vocab/#term-Request ?
:ex-2
    rdfs:comment """Example app requests permission to use and store the email address and social network 
    information of users for the purpose of performing research and using consent as legal basis.""" ;
    a odrl:Policy ;
    odrl:permission [
        a odrl:Permission ;
        odrl:assignee <https://example-app.com> ;
        odrl:target odrl-ac:EmailAddress, odrl-ac:SocialNetwork ;
        odrl:action [
            rdf:value odrl-ac:Use, odrl-ac:Store ;
            odrl:refinement [
                odrl:and _:purposeConstraint, _:legalBasisConstraint ;
            ]
        ]
    ] .

_:purposeConstraint
    a odrl:Constraint ;
    odrl:leftOperand odrl:purpose ;
    odrl:operator odrl:isA ;
    odrl:rightOperand dpv:ResearchAndDevelopment .
    
_:legalBasisConstraint
    a odrl:Constraint ;
    odrl:leftOperand odrl-ac:legalBasis ;
    odrl:operator odrl:eq ;
    odrl:rightOperand dpv-gdpr:A6-1-a-explicit-consent .